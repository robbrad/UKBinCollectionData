{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "Hillingdon",
                "https://www.hillingdon.gov.uk/collection-day",
                "-n",
                "2, Milverton Drive",
                "-p",
                "UB10 8PP",
                "-w",
                "http://localhost:4444"
            ]
        },
        {
            "name": "Python Debugger: Integ Tests",
            "type": "debugpy",
            "request": "launch",
            "purpose": [
                "debug-test"
            ],
            "env": {
                "PYTEST_ADDOPTS": "--headless=False --local_browser=False"
            }
        }
        {
            "name": "Debug Pytest via Poetry",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "uk_bin_collection/tests/step_defs/",
                "-k",
                "hillingdon",
                "--headless=False",
                "--selenium_url=http://localhost:4444"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}
poetry run pytest uk_bin_collection/tests/step_defs/ -k "Council_Name" --headless=False --selenium_url=http://localhost:4444
